---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import { getRelativeLocaleUrl } from "astro:i18n";
import { languages, defaultLang } from "../i18n/ui";
import { useTranslations } from "../i18n/utils";

const lang = Astro.currentLocale || defaultLang;
const t = useTranslations(lang as any);

function getPath(path: string) {
	return getRelativeLocaleUrl(lang, path);
}
---

<header>
	<nav class="container">
		<div class="nav-header">
			<div class="logo">
				<a href={getPath("/")}>
					<img src="/logo.png" alt={SITE_TITLE} height="50" />
				</a>
			</div>

			<!-- Mobile Menu Button -->
			<button class="mobile-menu-btn" aria-label="Toggle Menu">
				<span class="bar"></span>
				<span class="bar"></span>
				<span class="bar"></span>
			</button>
		</div>

		<div class="nav-content">
			<div class="internal-links">
				<HeaderLink href={getPath("/intro/hospital")}
					>{t("nav.about")}</HeaderLink
				>
				<HeaderLink href={getPath("/intro/staff")}
					>{t("nav.staff")}</HeaderLink
				>
				<HeaderLink href={getPath("/intro/equipment")}
					>{t("nav.equipment")}</HeaderLink
				>
				<HeaderLink href={getPath("/treatments")}
					>{t("nav.treatments")}</HeaderLink
				>
				<HeaderLink href={getPath("/price")}
					>{t("nav.price")}</HeaderLink
				>
				<HeaderLink href={getPath("/location")}
					>{t("nav.location")}</HeaderLink
				>
			</div>

			<div class="lang-switch">
				<select onchange="window.location.href=this.value">
					{
						Object.entries(languages).map(([code, label]) => (
							<option
								value={getRelativeLocaleUrl(code, "")}
								selected={code === lang}
							>
								{label}
							</option>
						))
					}
				</select>
			</div>
		</div>
	</nav>
</header>

<script>
	const menuBtn = document.querySelector(".mobile-menu-btn");
	const navContent = document.querySelector(".nav-content");

	if (menuBtn && navContent) {
		menuBtn.addEventListener("click", () => {
			menuBtn.classList.toggle("active");
			navContent.classList.toggle("active");
		});
	}
</script>

<style>
	header {
		margin: 0;
		padding: 1em 0;
		background: white;
		box-shadow: var(--box-shadow);
		position: sticky;
		top: 0;
		z-index: 100;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.nav-header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: auto;
	}

	.logo img {
		height: 50px;
		width: auto;
		display: block;
	}

	.nav-content {
		display: flex;
		align-items: center;
		gap: 2em;
	}

	.internal-links {
		display: flex;
		gap: 1.5em;
	}

	.internal-links a {
		padding: 0.5em 0;
		color: var(--text-main);
		text-decoration: none;
		font-weight: 500;
		border-bottom: 2px solid transparent;
		transition: all 0.2s;
	}

	.internal-links a:hover,
	.internal-links a.active {
		color: var(--primary);
		border-bottom-color: var(--primary);
	}

	.lang-switch select {
		padding: 0.4em;
		border: 1px solid var(--border);
		border-radius: 4px;
		background: white;
		color: var(--text-main);
	}

	.mobile-menu-btn {
		display: none;
		flex-direction: column;
		justify-content: space-between;
		width: 30px;
		height: 21px;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0;
		z-index: 101;
	}

	.bar {
		width: 100%;
		height: 3px;
		background-color: var(--text-main);
		border-radius: 3px;
		transition: all 0.3s ease;
	}

	@media (max-width: 960px) {
		nav {
			flex-direction: column;
			align-items: stretch;
		}

		.nav-header {
			width: 100%;
			padding-bottom: 0;
		}

		.mobile-menu-btn {
			display: flex;
		}

		/* Hamburger Animation */
		.mobile-menu-btn.active .bar:nth-child(1) {
			transform: translateY(9px) rotate(45deg);
		}
		.mobile-menu-btn.active .bar:nth-child(2) {
			opacity: 0;
		}
		.mobile-menu-btn.active .bar:nth-child(3) {
			transform: translateY(-9px) rotate(-45deg);
		}

		.nav-content {
			display: none;
			flex-direction: column;
			width: 100%;
			padding-top: 1em;
			border-top: 1px solid #eee;
			margin-top: 1em;
			gap: 1.5em;
		}

		.nav-content.active {
			display: flex;
			animation: slideDown 0.3s ease-out forwards;
		}

		.internal-links {
			flex-direction: column;
			align-items: center;
			width: 100%;
			gap: 1em;
		}

		.internal-links a {
			width: 100%;
			text-align: center;
			padding: 0.8em 0;
			border-bottom: 1px solid #f5f5f5;
		}

		.internal-links a:last-child {
			border-bottom: none;
		}

		.lang-switch {
			margin-bottom: 1em;
		}
	}

	@keyframes slideDown {
		from {
			opacity: 0;
			transform: translateY(-10px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>
