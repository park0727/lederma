---
const today = new Date();
import { SITE_TITLE } from "../consts";
import { useTranslations } from "../i18n/utils";

const lang = Astro.currentLocale || "ko";
const t = useTranslations(lang as any);
---

<footer>
	<div class="container">
		<div class="footer-content">
			<div class="footer-brand">
				<h3>{t("site.title")}</h3>
				<p>{t("site.description")}</p>
			</div>
			<div class="footer-info">
				<p>
					<strong>{t("footer.address.label")}:</strong>
					{t("footer.address.value")}
				</p>
				<p><strong>{t("footer.phone.label")}:</strong> 02-0000-0000</p>
				<p>
					<strong>{t("footer.license.label")}:</strong> 000-00-00000
				</p>
			</div>
		</div>
		<div class="copyright">
			&copy; {today.getFullYear()}
			{t("site.title")}. {t("footer.copyright")}
		</div>
	</div>
</footer>

<style>
	footer {
		padding: 4em 0 2em;
		background: #f5f2ed;
		color: var(--text-main);
		margin-top: auto;
		border-top: 1px solid rgba(139, 115, 85, 0.1);
	}
	.footer-content {
		display: flex;
		justify-content: space-between;
		flex-wrap: wrap;
		gap: 2em;
		margin-bottom: 2em;
	}
	.footer-brand h3 {
		color: var(--primary-dark);
		margin-bottom: 0.5em;
		font-size: 1.5rem;
	}
	.footer-brand p {
		color: var(--primary);
		margin: 0;
		font-weight: 500;
	}
	.footer-info p {
		margin: 0.5em 0;
		color: var(--text-light);
		font-size: 0.9em;
	}
	.footer-info strong {
		color: var(--primary-dark);
	}
	.copyright {
		text-align: center;
		padding-top: 2em;
		border-top: 1px solid rgba(139, 115, 85, 0.15);
		color: #999;
		font-size: 0.85em;
	}
	@media (max-width: 720px) {
		.footer-content {
			flex-direction: column;
			text-align: center;
		}
	}
</style>
