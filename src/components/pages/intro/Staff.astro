---
import PageLayout from "../../../layouts/PageLayout.astro";
import { useTranslations } from "../../../i18n/utils";

const lang = Astro.currentLocale || "ko";
const t = useTranslations(lang as any);
---

<PageLayout title={`${t("nav.staff")} - ${t("site.title")}`}>
    <div class="container">
        <h1 class="page-title">{t("nav.staff")}</h1>
        <div class="profile-card scroll-reveal">
            <div class="profile-image">
                <div class="placeholder-img">원장님 사진</div>
            </div>
            <div class="profile-info">
                <h2>{t("staff.profile.name")}</h2>
                <p class="greeting">
                    {t("staff.profile.greeting")}
                </p>
                <div class="history">
                    <h3>{t("staff.history.title")}</h3>
                    <ul>
                        <li>{t("staff.history.1")}</li>
                        <li>{t("staff.history.2")}</li>
                        <li>{t("staff.history.3")}</li>
                        <li>{t("staff.history.4")}</li>
                        <li>{t("staff.history.5")}</li>
                    </ul>
                </div>
                <div class="history">
                    <h3>{t("staff.academic.title")}</h3>
                    <ul>
                        <li>{t("staff.academic.1")}</li>
                        <li>{t("staff.academic.2")}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</PageLayout>

<style>
    .page-title {
        text-align: center;
        margin: 3rem 0;
        font-size: 2.5rem;
    }
    .profile-card {
        display: flex;
        gap: 4rem;
        background: white;
        padding: 4rem;
        border-radius: var(--radius);
        box-shadow: var(--box-shadow);
        align-items: flex-start;
    }
    .profile-image {
        flex: 0 0 350px;
    }
    .placeholder-img {
        width: 100%;
        height: 450px;
        background: #f5f5f5;
        border-radius: var(--radius);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #999;
    }
    .profile-info {
        flex: 1;
    }
    .profile-info h2 {
        font-size: 2rem;
        color: var(--primary-dark);
        margin-bottom: 1rem;
    }
    .greeting {
        font-size: 1.2rem;
        font-style: italic;
        color: #666;
        margin-bottom: 3rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid #eee;
    }
    .history {
        margin-bottom: 2rem;
    }
    .history h3 {
        font-size: 1.2rem;
        color: var(--primary);
        margin-bottom: 1rem;
    }
    .history ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    .history li {
        margin-bottom: 0.5rem;
        padding-left: 1rem;
        position: relative;
    }
    .history li::before {
        content: "•";
        color: var(--accent);
        position: absolute;
        left: 0;
    }
    @media (max-width: 900px) {
        .profile-card {
            flex-direction: column;
            padding: 2rem;
            align-items: center;
        }
        .profile-image {
            flex: 0 0 auto;
            width: 100%;
            max-width: 350px;
        }
        .placeholder-img {
            height: 350px;
        }
    }
</style>
